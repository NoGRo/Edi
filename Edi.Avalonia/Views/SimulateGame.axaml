<Window x:Class="Edi.Avalonia.Views.SimulateGame"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="clr-namespace:Edi.Avalonia.Views"
  Title="Preview Player"
  Width="131"
  Height="451"
  x:DataType="views:SimulateGameViewModel"
  CanResize="False"
  ShowInTaskbar="True">
    <Grid RowDefinitions="*,Auto">
        <ProgressBar Grid.Row="0" Width="80" Height="300"
          HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical"
          Value="{Binding SimulatorDevice.ProgressValue}" />

        <CheckBox Grid.Row="1" Margin="5" HorizontalAlignment="Center"
          Content="Always on Top" IsCheckedChanged="OnIsAlwaysOnTopChanged" />
    </Grid>
</Window>
