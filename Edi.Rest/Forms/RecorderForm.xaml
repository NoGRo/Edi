<Window x:Class="Edi.Forms.Recorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recorder" MinHeight="120" MinWidth="350" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Recording Controls and Output Selector -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnToggle" Width="30" Height="30" Click="BtnToggle_Click" Margin="0,0,10,0">
                <Ellipse Width="15" Height="15" Fill="Red"/>
            </Button>
            <CheckBox x:Name="chkAlwaysOnTop" Content="Always on Top" VerticalAlignment="Center" Margin="0,0,10,0"
                      Checked="ChkAlwaysOnTop_Checked" Unchecked="ChkAlwaysOnTop_Unchecked"/>
            <Button x:Name="btnSelectOutput" Content="Output" Width="60" Height="25" Click="BtnSelectOutput_Click" Margin="0,0,10,0"/>
            <TextBox x:Name="txtOutputFile" Grid.Column="3" Text="{Binding OutputName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center" FontSize="12" IsReadOnly="True" BorderThickness="0" Background="Transparent"
                     HorizontalScrollBarVisibility="Hidden" TextWrapping="NoWrap" Loaded="TxtOutputFile_Loaded"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="txtStatus" Grid.Row="1" Text="Recorder ready" Padding="5" 
                   VerticalAlignment="Center" TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>