<Window x:Class="Edi.Forms.Recorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edi.Forms"
        mc:Ignorable="d"
        Title="Recorder" Height="231" Width="410">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filename Input -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Output Filename (without extension):"/>
            <TextBox x:Name="txtFilename" Text="{Binding OutputName, UpdateSourceTrigger=PropertyChanged}" Width="200" HorizontalAlignment="Left"/>

        </StackPanel>

        <!-- Screen Area Selection -->
        <GroupBox Grid.Row="1" Header="Recording Area" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <StackPanel Margin="0,0,10,0">
                    <Label Content="X:"/>
                    <TextBox x:Name="txtX" Width="60" Text="{Binding X, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <Label Content="Y:"/>
                    <TextBox x:Name="txtY" Width="60" Text="{Binding Y, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <Label Content="Width:"/>
                    <TextBox x:Name="txtWidth" Width="60" Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel>
                    <Label Content="Height:"/>
                    <TextBox x:Name="txtHeight" Width="60" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Button x:Name="btnSelectArea" Content="Select Area" Margin="10,0,0,0" Click="BtnSelectArea_Click"/>
            </StackPanel>
        </GroupBox>
        <!-- Agregar TextBox para FfmpegCodec debajo del GroupBox -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Label Content="FFmpeg Codec:"/>
            <TextBox x:Name="txtFfmpegCodec" Width="300" HorizontalAlignment="Left" 
             Text="{Binding FfmpegCodec, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Recording Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnStart" Content="Start Recording" Width="100" Click="BtnStart_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnEnd" Content="End Recording" Width="100" Click="BtnEnd_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock x:Name="txtStatus" Grid.Row="3" Text="Ready" VerticalAlignment="Top"/>
    </Grid>
</Window>